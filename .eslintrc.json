{
    "extends": "standard",
    "env": { "es6": true },
    "plugins": ["react"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": ["error", "always"]
    },
    "globals": {
        "React": true
    }
}